<div class="tasks">
  <% @tasks.each do |task| %>
    <div class="task">
      <div class="task-name">
        <h2>
          <%= task.name %>
        </h2>
      </div>
      
      <div class="task-flex">
        <div class="flex-left">
          <div class="due-date">
            <div class="label">
              期限：
            </div>
            <div class="date">
              <%= task.due_date %>
            </div>
          </div>
          <div class="created-at">
            <div class="label">
              作成日：
            </div>
            <div class="date">
              <%= task.created_at %>
            </div>
          </div>
        </div>

        <div class="flex-center">
          <div class="link-button">
            <%= link_to "編集", edit_task_path(task.id) %>
          </div>
        </div>

        <div class="flex-right">
          <% if task.status == 0 %>
            <div class="status status-doing">
      	      未完了
            </div>
          <% elsif task.status == 1 %>
            <div class="status status-done">
              完了
            </div>
          <% end %>
        </div>
      </div>

    </div>
  <% end %>
</div>
